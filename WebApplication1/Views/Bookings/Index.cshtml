@model IEnumerable<WebApplication2.Models.Booking>

@{
    ViewData["Title"] = "Index";
}

<h1>Booking Details</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr class="table-primary">
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SelectEventDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SelectEventStartingTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SelectHotel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SelectEvent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SelectEventTiming)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalNumberOfGuests)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SelectEventDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SelectEventStartingTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SelectHotel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SelectEvent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SelectEventTiming)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalNumberOfGuests)
            </td>
            <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a> 
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
